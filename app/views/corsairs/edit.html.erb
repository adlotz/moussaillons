<h1>Edition</h1>

 
<%= form_with(model: @corsair, local: true) do |form| %>
 
 <p>
    <%= form.label :first_name %><br>
    <%= form.text_field :first_name %>
  </p>
 
  <p>
    <%= form.label :age %><br>
    <%= form.text_area :age %>
  </p>
 
  <p>
    <%= form.submit %>
    <%= link_to '⚠️Clique pour détruire⚠️', @corsair, method: :delete %>
  </p>

  
 
<% end %>
 